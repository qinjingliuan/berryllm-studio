/* 
 * BerryLLM Studio Light Theme
 * 现代风格的浅色主题
 */

/* 全局样式 */
QWidget {
    background-color: #ffffff;
    color: #333333;
    font-family: "Segoe UI", Arial, sans-serif;
    font-size: 12px;
}

/* 主窗口 */
QMainWindow {
    background-color: #f5f5f5;
}

/* 菜单栏 */
QMenuBar {
    background-color: #f0f0f0;
    border-bottom: 1px solid #dddddd;
}

QMenuBar::item {
    background-color: transparent;
    padding: 6px 10px;
}

QMenuBar::item:selected {
    background-color: #e0e0e0;
}

QMenuBar::item:pressed {
    background-color: #d0d0d0;
}

/* 菜单 */
QMenu {
    background-color: #ffffff;
    color: #333333;
    border: 1px solid #d0d0d0;
}

QMenu::item {
    padding: 6px 24px 6px 24px;
}

QMenu::item:selected {
    background-color: #e0e0e0;
    color: #333333;
}

/* 状态栏 */
QStatusBar {
    background-color: #f5f5f5;
    color: #333333;
    border-top: 1px solid #d0d0d0;
}

/* 按钮 */
QPushButton {
    background-color: #f0f0f0;
    color: #333333;
    border: 1px solid #d0d0d0;
    border-radius: 4px;
    padding: 6px 12px;
}

QPushButton:hover {
    background-color: #e0e0e0;
}

QPushButton:pressed {
    background-color: #d0d0d0;
}

/* 文本编辑框 */
QTextEdit {
    background-color: #ffffff;
    color: #333333;
    border: 1px solid #d0d0d0;
    border-radius: 4px;
}

/* 行编辑框 */
QLineEdit {
    background-color: #ffffff;
    color: #333333;
    border: 1px solid #d0d0d0;
    border-radius: 4px;
    padding: 4px;
}

QLineEdit:focus {
    border-color: #4a90e2;
}

/* 组合框 */
QComboBox {
    background-color: #ffffff;
    border: 1px solid #cccccc;
    border-radius: 4px;
    padding: 5px;
    min-width: 6em;
}

QComboBox:hover {
    border-color: #bbbbbb;
}

QComboBox:on {
    border-color: #4a90e2;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 20px;
    border-left: 1px solid #cccccc;
}

QComboBox::down-arrow {
    image: url(:/resources/images/arrow_down_dark.png);
}

/* 复选框 */
QCheckBox {
    spacing: 5px;
}

QCheckBox::indicator {
    width: 16px;
    height: 16px;
}

QCheckBox::indicator:unchecked {
    border: 1px solid #cccccc;
    background-color: #ffffff;
    border-radius: 3px;
}

QCheckBox::indicator:checked {
    border: 1px solid #4a90e2;
    background-color: #4a90e2;
    border-radius: 3px;
}

/* 标签页 */
QTabWidget::pane {
    border: 1px solid #d0d0d0;
    border-radius: 4px;
}

QTabBar::tab {
    background-color: #f0f0f0;
    color: #333333;
    border: 1px solid #d0d0d0;
    border-bottom: none;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    padding: 6px 12px;
    margin-right: 2px;
}

QTabBar::tab:selected {
    background-color: #ffffff;
    border-bottom: 1px solid #ffffff;
}

QTabBar::tab:hover:!selected {
    background-color: #e0e0e0;
}

/* 分组框 */
QGroupBox {
    border: 1px solid #cccccc;
    border-radius: 4px;
    margin-top: 12px;
    padding-top: 15px;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 5px;
    color: #666666;
}

/* 列表样式 */
QListWidget {
    background-color: #ffffff;
    color: #333333;
    border: 1px solid #d0d0d0;
    border-radius: 4px;
}

QListWidget::item {
    padding: 4px;
}

QListWidget::item:selected {
    background-color: #e0e0e0;
    color: #333333;
}

QListWidget::item:hover {
    background-color: #f0f0f0;
}

/* 滚动条样式 */
QScrollBar:vertical {
    background-color: #f5f5f5;
    width: 12px;
    margin: 0px;
}

QScrollBar::handle:vertical {
    background-color: #c0c0c0;
    min-height: 20px;
    border-radius: 6px;
}

QScrollBar::handle:vertical:hover {
    background-color: #a0a0a0;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background-color: #f5f5f5;
}

/* 侧边菜单 */
#side_menu {
    background-color: #e8e8e8;
    color: #333333;
    border-right: 1px solid #d0d0d0;
}

#side_menu_title {
    color: #4a90e2;
    font-size: 16px;
    font-weight: bold;
    padding: 10px;
}

#menu_separator {
    background-color: #d0d0d0;
}

#menu_section_title {
    color: #666666;
    font-weight: bold;
    padding: 5px 0px;
}

#side_menu_button {
    text-align: left;
    padding: 8px 15px;
    border-radius: 4px;
    min-width: 0px;
    background-color: transparent;
    border: none;
}

#side_menu_button:hover {
    background-color: #e0e0e0;
}

#side_menu_button:pressed {
    background-color: #d0d0d0;
}

#theme_button {
    text-align: left;
    padding: 8px 15px;
    border-radius: 4px;
    min-width: 0px;
    background-color: transparent;
    border: none;
}

#theme_button:hover {
    background-color: #e0e0e0;
}

#theme_button:pressed {
    background-color: #d0d0d0;
}

/* 聊天视图自定义样式 */
#_chat_display {
    background-color: #ffffff;
    border: 1px solid #dddddd;
    border-radius: 6px;
    font-size: 10pt;
}

#_input_field {
    background-color: #ffffff;
    border: 1px solid #cccccc;
    border-radius: 4px;
    padding: 8px;
    font-size: 10pt;
}

/* 对话框样式 */
QDialog {
    background-color: #ffffff;
    color: #333333;
}

/* 圆形图标按钮 */
#round_icon_button {
    background-color: #e8e8e8;  /* 与side_menu背景色相同 */
    color: #333333;
    border: none;
    border-radius: 18px; /* 圆形边框 */
    padding: 2px;
    width: 36px;
    height: 36px;
    min-width: 36px;
    min-height: 36px;
    max-width: 36px;
    max-height: 36px;
    font-size: 18px;
    font-weight: bold;
    text-align: center;
}

#round_icon_button:hover {
    background-color: #d0d0d0;
    border: 1px solid #c0c0c0;
    opacity: 1.0;
}

#round_icon_button:pressed {
    background-color: #c0c0c0;
    border: 1px solid #b0b0b0;
}

#round_icon_button.active {
    background-color: #f5f5f5;
    border: 0.5px solid #e0e0e0;
}

#round_icon_button.active .icon {
    color: var(--color-primary);
}

/* 侧边菜单样式 */
#session_menu {
    background-color: #f5f5f5;
    color: #333333;
    border-right: 1px solid #e0e0e0;
}

#session_title {
    color: #333333;
    font-weight: bold;
    font-size: 14px;
    padding: 5px;
}

#icon_button {
    background-color: #f5f5f5;
    color: #333333;
    border: none;
    border-radius: 4px;
    padding: 8px;
    margin: 2px;
}

#icon_button:hover {
    background-color: #e0e0e0;
}

#icon_button:pressed {
    background-color: #d0d0d0;
}

/* 设置对话框样式 */
QDialog#SettingsDialog {
    background-color: #f5f5f5;
}

/* 左侧设置菜单 */
#settings_left_menu {
    background-color: #e8e8e8;
    border-right: 1px solid #d0d0d0;
}

#settings_menu_list {
    background-color: transparent;
    border: none;
    font-size: 14px;
}

#settings_menu_list::item {
    padding: 12px 20px;
    border-radius: 0px;
    color: #404040;
}

#settings_menu_list::item:selected {
    background-color: #d5e5ff;
    color: #0066cc;
    font-weight: bold;
}

#settings_menu_list::item:hover:!selected {
    background-color: #f0f0f0;
}

/* 内容区域 */
#settings_content {
    background-color: #f5f5f5;
}

#settings_title_bar {
    background-color: #f5f5f5;
    border-bottom: 1px solid #d0d0d0;
}

#settings_title {
    font-size: 18px;
    font-weight: bold;
    color: #303030;
}

#settings_page {
    background-color: transparent;
}

/* 模型平台列表 */
#model_search_box {
    padding: 8px 12px;
    font-size: 14px;
    border-radius: 6px;
    margin-bottom: 10px;
    background-color: #ffffff;
}

#platform_item {
    background-color: #ffffff;
    border-radius: 6px;
    margin: 2px 0px;
    border: 1px solid #e0e0e0;
}

#platform_item:hover {
    background-color: #f0f0f0;
}

#platform_name {
    font-size: 14px;
    padding: 6px;
}

#add_platform_button {
    background-color: #0066cc;
    color: white;
    border: none;
    border-radius: 6px;
    padding: 8px 0;
    margin-top: 10px;
    font-size: 14px;
}

#add_platform_button:hover {
    background-color: #0077dd;
}

#danger_button {
    background-color: #cc4040;
    color: white;
    border: none;
}

#danger_button:hover {
    background-color: #dd5050;
} 